.signupform
  = form_for @user do |f|
    - if @user.errors.any?
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
    .form-group
      = f.label :name, t('.name'), class: "control-label"
      .col-sm-4
        = f.text_field :name, class: "form-control"

    .form-group
      = f.label :email, "Email", class: "control-label"
      .col-sm-4
        = f.text_field :email, class: "form-control"

    .form-group
      = f.label :password, t('.password'), class: "control-label"
      .col-sm-4
        = f.password_field :password, class: "form-control"

    .form-group
      = f.label :password_confirmation, t('.password_confirmation'), class: "control-label"
      .col-sm-4
        = f.password_field :password_confirmation, class: "form-control"

    .form-group
      .signupbutton
        = f.submit t(".create_account"), class: "btn btn-large btn-primary"
