.row.bloc
  .col-md-12
    .preamble
      %h2 Review this images from 5 to 100
  .col-md-8
    .image_display
      .row.image
        .col-md-12
          .img-center{:title => "Default image"}
            %img{:alt => "Default Image", :src => asset_path(@default_image_name), :title => "Default image", :style => "width:100%; height:100%;" }
          .image_user_value{:title => "Expert value"}

        .col-md-6
          .img-left-side
            %h3{:title => "list to previous image"}
              -# %button.fa.fa-chevron-circle-left.strong
              %button.btn.btn-default{type: "submit", name: "submission" } Previous image


        .col-md-6
          .img-right-side
            %h3{:title => "list to next image"}
              -# %button.fa.fa-chevron-circle-right
              %button.btn.btn-default{type: "submit", name: "submission" } Next image

  .col-md-4
    .col-md-12
      %h2.up-theme{:title => "theme_name"} #{@selected_theme}

    .left_controls
      .select_theme
        = render 'work/button_theme_select'

    .col-md-12
      %h2.up{:title => "Image file name"} #{@selected_image_name}

    .col-md-12
      %span.user_value{:style => "display: none"}
        = "User value"
        %h2.value{:title => "User value"}

      %span.common_value{:style => "display: none"}
        = "Common value"
        %h2.common{:title => "Common value"}
      %span.total_values
        = "Total values"
        %h2.total{:title => "Total values"} #{@values_qty.round}

    .image_diag
      .value_block
        %h2.down#chosen_value{:title => "Value scale"} Set value: 50

      .row.percentage
        .col-md-6
          %p.left 5%
        .col-md-6
          %p.right 100%

      #slider
        %input.slide#slide{:max => "100", :min => "5", :value => "50",
                         :onchange => "updateValue(this.value)",
                         :step => "5", :type => "range"}
      %br

      %button.btn.button_save{:title => "Save image diag results"}
        %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Save image diag results"} Save value
