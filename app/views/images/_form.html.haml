= form_with(model: image) do |form|
  - if image.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(image.errors.count, "error")
        prohibited this image from being saved:
      %ul
        - image.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :file, style: "display: block"
    = form.text_field :file
  %div
    = form.label :ave_value, style: "display: block"
    = form.text_field :ave_value
  %div
    = form.label :theme_id, style: "display: block"
    = form.number_field :theme_id
  %div
    = form.submit
